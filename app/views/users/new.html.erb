<h1>Sign up!</h1>

<% if flash[:errors] %>
  <%= flash[:errors].each do |error|%>
    <%= error %>
  <% end %>
<% end %>

<%= form_for @user do |f| %>
  <%= f.label "Username" %>
  <%= f.text_field :name %><br>
  <%= f.label "Password" %>
  <%= f.password_field :password %><br>
  <%= f.label "Re-type your password to confirm" %>
  <%= f.password_field :password_confirmation %>
  <%= f.submit "Sign up!" %>
<% end %>